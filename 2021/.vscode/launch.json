{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug dayXX (GDB)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/day${input:dayNumber}",
      "args": [],
    //   "args": ["-t", "01"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,           // avoid “hanging” on a missing console
      "console": "integratedTerminal",    // show program I/O in VS Code terminal
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",   // adjust if needed
      "setupCommands": [
        { "description": "Enable pretty printing", "text": "-enable-pretty-printing", "ignoreFailures": true }
      ],
      "preLaunchTask": "Build dayXX (Debug)"
      // For troubleshooting, temporarily add:
      // "logging": { "engineLogging": true, "trace": true, "traceResponse": true }
    }
  ],
  "inputs": [
    {
      "id": "dayNumber",
      "type": "promptString",
      "description": "Enter the day number (01..24)",
      "default": "02"
    }
  ]
}